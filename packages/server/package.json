{
  "name": "@serlo-org/athene2",
  "version": "0.0.4",
  "license": "Apache-2.0",
  "author": "Serlo Education e.V.",
  "scripts": {
    "build": "yarn docker:build",
    "deploy": "npm-run-all docker:tag docker:push",
    "docker:build": "npm-run-all docker:build:*",
    "docker:build:httpd": "docker build -f docker/httpd/Dockerfile -t serlo/athene2-httpd:$npm_package_version .",
    "docker:build:php": "docker build -f docker/php/Dockerfile -t serlo/athene2-php:$npm_package_version .",
    "docker:tag": "npm-run-all docker:tag:*",
    "docker:tag:httpd": "docker tag serlo/athene2-httpd:$npm_package_version eu.gcr.io/serlo-production/serlo/athene2-httpd:$npm_package_version",
    "docker:tag:php": "docker tag serlo/athene2-php:$npm_package_version eu.gcr.io/serlo-production/serlo/athene2-php:$npm_package_version",
    "docker:push": "npm-run-all docker:push:*",
    "docker:push:httpd": "docker push eu.gcr.io/serlo-production/serlo/athene2-httpd:$npm_package_version",
    "docker:push:php": "docker push eu.gcr.io/serlo-production/serlo/athene2-php:$npm_package_version",
    "c": "docker-compose run --rm composer composer",
    "c-dev": "docker-compose run --rm composer-dev-tools composer",
    "prestart": "yarn c install && yarn c-dev install",
    "start": "docker-compose up --build -d",
    "stop": "docker-compose down",
    "format": "yarn _php-cs-fixer",
    "e2e": "cypress open",
    "unit": "docker-compose exec php src/vendor/bin/phpunit",
    "_php-cs-fixer": "docker-compose exec php dev-tools/vendor/bin/php-cs-fixer fix --config=php-cs-fixer.config.php",
    "_prettier": "prettier \"{{.circleci,cypress,scripts}/**/*,*}.{js,jsx,ts,tsx,css,scss,sass,less,json,md,markdown,yaml,yml}\""
  },
  "dependencies": {},
  "devDependencies": {
    "cypress": "^3.0.0",
    "cypress-testing-library": "^2.0.0",
    "npm-run-all": "^4.0.0"
  },
  "private": true
}
