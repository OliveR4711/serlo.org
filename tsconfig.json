{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",

    "baseUrl": "packages",
    "paths": {
      "@serlo/editor-helpers": ["editor-helpers/src"],
      "@serlo/legacy-editor-to-editor": ["legacy-editor-to-editor/src"],
      "@serlo/markdown": ["markdown/src"]
    }
  }
}
