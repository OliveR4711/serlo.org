{
  "name": "@serlo/serlo.org-workspace",
  "version": "0.0.0",
  "bugs": {
    "url": "https://github.com/serlo/serlo.org/issues"
  },
  "repository": "serlo/serlo.org",
  "license": "Apache-2.0",
  "author": "Serlo Education e.V.",
  "scripts": {
    "build": "lerna run --stream build",
    "build:docker": "npm-run-all build:docker:serlo-org-node build:docker:serlo-org-workspace build:docker:images",
    "build:docker:serlo-org-node": "docker build . -t serlo-org-node -f docker/node/Dockerfile",
    "build:docker:serlo-org-workspace": "docker build . -t serlo-org-workspace -f docker/workspace/Dockerfile",
    "build:docker:images": "lerna run --stream build:docker",
    "deploy": "lerna run deploy",
    "sentry-release": "lerna run --stream sentry-release",
    "format": "npm-run-all --parallel format:*",
    "format:prettier": "yarn _prettier --write",
    "format:php": "yarn _php-cs-fixer",
    "lint": "npm-run-all --parallel lint:js lint:php",
    "lint:js": "npm-run-all --parallel lint:js:*",
    "lint:js:tsc": "tsc --noEmit",
    "lint:js:prettier": "yarn _prettier --check",
    "lint:php": "yarn _php-cs-fixer --dry-run",
    "license": "ts-node scripts/license-headers",
    "test:e2e": "jest --config ./jest.config-e2e.js",
    "test:js": "jest",
    "test:php": "docker-compose exec server-php src/vendor/bin/phpunit",
    "c": "docker-compose run --rm server-composer composer",
    "c-dev": "docker-compose run --rm server-composer-dev-tools composer",
    "prestart": "yarn c install && yarn c-dev install",
    "start": "docker-compose up --build",
    "_prettier": "prettier \"{{packages/{private,public}/*/,}{.circleci,__mocks__,__tests__,scripts,src}/**/*,*}.{js,jsx,ts,tsx,json,md,yaml,yml,css,scss}\"",
    "_php-cs-fixer": "docker-compose exec server-php dev-tools/vendor/bin/php-cs-fixer fix --config=php-cs-fixer.config.php"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.0.0",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@splish-me/changelog": "^0.1.0",
    "@splish-me/copyright-headers": "^0.0.2",
    "@types/glob": "^7.0.0",
    "@types/jest": "^24.0.0",
    "@types/signale": "^1.0.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "cross-env": "^5.0.0",
    "glob": "^7.0.0",
    "jest": "^24.0.0",
    "lerna": "^3.0.0",
    "nodemon": "^1.0.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^1.0.0",
    "rimraf": "^2.0.0",
    "signale": "^1.0.0",
    "ts-node": "^8.0.0",
    "typescript": "^3.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/private/*",
    "packages/public/*"
  ]
}
